<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@mipmap/background</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="QrCompras" parent="AppTheme" >
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="colorAccent">@android:color/background_light</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
    </style>

</resources>
