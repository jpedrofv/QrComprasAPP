<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@mipmap/background</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="QrCompras" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="colorAccent">@android:color/background_light</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="QrCompras.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="QrCompras.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="QrCompras.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
